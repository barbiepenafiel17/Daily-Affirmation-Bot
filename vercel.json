{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/subscribe",
            "dest": "index.js"
        },
        {
            "src": "/unsubscribe/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/subscribers",
            "dest": "index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "EMAIL_USER": "${EMAIL_USER}",
        "EMAIL_PASS": "${EMAIL_PASS}"
    },
    "crons": [
        {
            "path": "/api/send-affirmations",
            "schedule": "0 8 * * *"
        }
    ]
}
